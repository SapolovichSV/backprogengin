{
    "swagger": "2.0",
    "info": {
        "description": "This is a simple backend for a out web application",
        "title": "backProgeng API Info",
        "contact": {},
        "version": "1.0"
    },
    "basePath": "/api",
    "paths": {
        "/drink": {
            "post": {
                "description": "Creates a drink with the specified name and tags",
                "consumes": [
                    "application/json"
                ],
                "produces": [
                    "application/json"
                ],
                "summary": "Creates a drink",
                "parameters": [
                    {
                        "description": "Drink what we add with optional tags,if tags not: set tags will be empty, name is required",
                        "name": "drink",
                        "in": "body",
                        "required": true,
                        "schema": {
                            "$ref": "#/definitions/entities.Drink"
                        }
                    }
                ],
                "responses": {
                    "201": {
                        "description": "Created",
                        "schema": {
                            "$ref": "#/definitions/entities.Drink"
                        }
                    },
                    "500": {
                        "description": "Internal Server Error",
                        "schema": {
                            "type": "string"
                        }
                    }
                }
            }
        }
    },
    "definitions": {
        "entities.Drink": {
            "type": "object",
            "properties": {
                "id": {
                    "type": "integer"
                },
                "name": {
                    "type": "string"
                },
                "tags": {
                    "type": "array",
                    "items": {
                        "type": "string"
                    }
                }
            }
        }
    }
}